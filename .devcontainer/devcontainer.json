{
    "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
    "features": {
        "ghcr.io/devcontainers-contrib/features/pipx-package": {},
        "ghcr.io/devcontainers-contrib/features/poetry": {},
        "ghcr.io/stuartleeks/dev-container-features/shell-history": {}
    },
    "postCreateCommand": "poetry config virtualenvs.in-project true && poetry install --no-interaction",
    "postAttachCommand": "poetry shell",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.profiles.linux": {
                    "poetry-shell": {
                        "path": "poetry",
                        "icon": "terminal-bash",
                        "args": [
                            "shell"
                        ]
                    }
                },
                "[python]": {
                    "editor.codeActionsOnSave": {
                        "source.fixAll.ruff": true,
                        "source.organizeImports": true
                    }
                },
                "python.venvPath": "${containerWorkspaceFolder}/.venv",
                "python.testing.pytestArgs": [
                    "tests"
                ],
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
                "python.experiments.optOutFrom": [
                    // Tests with sockets disabled don't show up otherwise.
                    // Ancient old issue.
                    "pythonTestAdapter"
                ]
            },
            "extensions": [
                "charliermarsh.ruff",
                "ryanluker.vscode-coverage-gutters",
                "ms-python.mypy-type-checker"
            ]
        }
    }
}